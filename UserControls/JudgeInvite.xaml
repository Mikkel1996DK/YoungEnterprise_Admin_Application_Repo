<UserControl x:Class="YoungEnterprise_Admin_Application.UserControls.JudgeInvite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoungEnterprise_Admin_Application.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid Background="White">
        <!-- Column/RowDefinitions below -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Invite Judge Label -->
        <Label Content="Inviter Dommer" FontFamily="Arial" FontSize="28" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>

        <!-- Name/Email Labels -->
        <Label Content="Navn:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="32" FontFamily="Arial"/>
        <Label Content="Email:" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="32" FontFamily="Arial"/>

        <!-- Name/Email Textboxes -->
        <TextBox x:Name="judgeNameTextBox" Grid.Column="1" Grid.Row="2" Height="40" VerticalAlignment="Center" Margin="5" FontFamily="Arial" FontSize="28"/>
        <TextBox x:Name="judgeEmailTextBox" Grid.Column="1" Grid.Row="3" Height="40" VerticalAlignment="Center" Margin="5" FontFamily="Arial" FontSize="28"/>

        <!-- Send Invite Button -->
        <Button x:Name="sendJudgeInvite" Grid.Column="1" Grid.Row="5" Content="Send Invitation" FontFamily="Arial" FontSize="36" Margin="5"/>
    </Grid>
</UserControl>
